<%- include("template/cabecera") %>
  <div class="container">
    <table class="table">
      <h1>Crud Mascotas - Mongo</h1>
      <a href="/crear" class="btn btn-success btn-block my-4">Crear nueva Mascota</a>
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nombre</th>
          <th scope="col">Descripcion</th>
          <th scope="col">Acci√≥n</th>
        </tr>
      </thead>
      <tbody>
        <% if (arrayMascotas.length> 0) { %>
          <% arrayMascotas.forEach(mascota=> { %>
            <tr>
              <th scope="row">
                <%= mascota.id %>
              </th>
              <td>
                <%= mascota.nombre %>
              </td>
              <td>
                <%= mascota.descripcion %>
              </td>
              <td>
                <a href="/<%= mascota._id %>" class="btn btn-warning btn-sm">Editar</a>
              </td>
            </tr>
            <% }) %>
              <% } %>
      </tbody>
    </table>
  </div>
  <%- include("template/footer") %>